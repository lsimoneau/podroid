<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.podling.podroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.podling.podroid.PodroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.podling.podroid.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.podling.podroid.AuthenticationActivity" >
        </activity>
        <activity android:name="com.podling.podroid.group.GroupActivity" >
        </activity>
        <activity android:name="com.podling.podroid.posts.PostsActivity" >
               <intent-filter>
            <action android:name="com.podling.podroid.REFRESH_POSTS"></action>
        </intent-filter>
        </activity>
        <activity android:name="com.podling.podroid.users.UserActivity" >
        </activity>
    </application>

</manifest>
